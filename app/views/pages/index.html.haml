-if admin_session
  .nav
    = link_to 'Add Project', new_project_path, class: 'btn btn-nav'
    = link_to 'All Messages', messages_path, class: 'btn btn-nav'
    = link_to 'Log Out', logout_path, class: 'btn btn-nav', method: :delete

.cover
  .myname
    %span.adam ADAM
    %br
    %span.lichty LICHTY
    %br
    %span.webdev WEB DEVELOPER

.portfolio
  .projects
    - @projects.each do |project|
      .project
        = link_to project.link, target: '_blank' do
          .project-image= image_tag project.avatar.url
          .project-title= project.title
        - if admin_session
          = link_to 'Edit Project', edit_project_path(project.id), class: 'btn btn-edit project'

.contact
  = render 'pages/contact'

.footer
  .icons
    = link_to "https://twitter.com/MrJadaml", target: '_blank' do
      - image_tag 'twitter_icon_sm.png', width: "30em"
    = link_to "https://github.com/MrJadaml", target: '_blank' do
      - image_tag('github_icon_sm.png', width: "30em")
    = link_to "https://www.linkedin.com/in/adamlichty", target: '_blank' do
      - image_tag('linkedin_icon_sm.png', width: "30em")
