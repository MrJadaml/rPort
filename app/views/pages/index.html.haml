.container
  .cover
    .myname
      %span.adam ADAM
      %br
      %span.lichty LICHTY

  .portfolio
    - @projects.each do |project|
      .project
        = link_to project.link, target: '_blank' do
          .project-title= project.title
          .project-image= image_tag project.avatar.url
        - if admin_session
          = link_to 'Edit Project', edit_project_path(project.id), class: 'btn btn-edit project'
    -if admin_session
      = link_to 'Add Project', new_project_path, class: 'btn project'

  .about

  .contact
    = render 'pages/contact'
